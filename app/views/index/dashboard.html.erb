<h2>マイダッシュボード</h2>

<p><strong>ID:</strong> <%= @current_user.id %></p>
<p><strong>ペンネーム:</strong> <%= @current_user.pen_name %></p>

<% role_label = case @current_user.role
                when 1 then "無料ユーザー"
                when 2 then "管理ユーザー"
                when 3 then "プレミアムプランユーザー"
                when 4 then "プロダクションプランユーザー"
                else "不明"
                end %>

<p><strong>ロール:</strong> <%= role_label %></p>

<!-- 上部スペーサー -->
<div style="height: 20px;"></div>

<!-- プロジェクト関連 -->
<div style="display: flex;">
  <!-- 左側：ユーザー情報は既に上で表示済み -->

  <!-- 右側：プロジェクト一覧 -->
  <div style="flex: 1;">
    <h3>プロジェクト一覧</h3>

    <% if @projects.empty? %>
      <p>まだプロジェクトに参加していません。</p>
      <%= link_to "プロジェクトを作成", new_project_path, class: "btn btn-primary" %>
    <% else %>
      <ul>
        <% @projects.each do |project| %>
          <li>
            <%= link_to project.project_name, project_path(project.id) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "プロジェクトを作成", new_project_path, class: "btn btn-secondary mt-2" %>
    <% end %>
  </div>
</div>
